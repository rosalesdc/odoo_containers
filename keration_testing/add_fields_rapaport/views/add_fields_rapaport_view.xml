                        <field name="numero_rapaport"></field> 
                        <field name="descuento_rapaport"></field>                        
                    </group>
                    <group>
                        <field name="costo_quilate_usd"></field>
                        <field name="costo_total"></field>                        
                    </group>
                  </group>                  
                </xpath>
            </field>
        </record>
		        
