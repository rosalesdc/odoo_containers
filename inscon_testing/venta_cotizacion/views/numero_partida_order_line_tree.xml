<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model='ir.ui.view' id='numero_partida_order_line_tree'>
			<field name='name'>numero_partida_order_line_tree</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
		    <field name="arch" type="xml">
		    	<xpath expr="//field[@name='payment_term_id']" position="after">
		    		<field name="x_vigencia"/>
		    	</xpath>
		        <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="before">
		            <field name="x_num_partida"/>
		        </xpath>
		    </field>
		</record>
		<record model='ir.ui.view' id='moneda_order_line_tree'>
			<field name='name'>moneda.order.line.tree</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_quotation_tree"/>
		    <field name="arch" type="xml">
		        <xpath expr="//field[@name='currency_id']" position="attributes">
		    		<attribute name='invisible'>0</attribute>
		    	</xpath>
		    </field>
		</record>
	</data>
</odoo>